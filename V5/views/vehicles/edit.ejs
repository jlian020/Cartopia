<% include ../partials/header.ejs %>
<div class="container">
    <h1 style="text-align: center;">EDIT <%=vehicle.name%></h1>
    <div style="width: 50%; margin: 0 auto">
      <form action="/vehicles/<%= vehicle._id%>/?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="vehicle[name]" value="<%= vehicle.name %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="number" name="vehicle[price]" value="<%= vehicle.price %>" min="0.01" step="0.01">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="vehicle[image]" value="<%= vehicle.img%>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="vehicle[description]" value="<%= vehicle.description%>">
        </div>
        <div class="form-group">
          <button class="btn btn-large btn-primary btn-block">Submit!</button>
        </div>
      </form>
    </div>
</div>
<% include ../partials/footer.ejs %>
