<% include ../partials/header.ejs %>
<div class="container">
    <h1 style="text-align: center;">Add a New Comment for <%= vehicle.name %> </h1>
    <div style="width: 50%; margin: 0 auto">
      <form action="/vehicles/<%= vehicle._id %>/comments" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[author]" placeholder="Author">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" placeholder="Comment">
        </div>
        <div class="form-group">
          <button class="btn btn-large btn-primary btn-block">Submit!</button>
        </div>
      </form>
    </div>
</div>
<% include ../partials/footer.ejs %>
