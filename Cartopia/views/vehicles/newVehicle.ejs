<% include ../partials/header.ejs %>
<div class="container">
    <h1 style="text-align: center;">Add a New Vehicle</h1>
    <div style="width: 50%; margin: 0 auto">
      <form action="/vehicles" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="name" placeholder="Name of Vehicle">
        </div>
        <div class="form-group">
          <input class="form-control" type="number" name="price" placeholder="Price Per Hour" min="0.01" step="0.01">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="image" placeholder="Image URL">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="description" placeholder="Car Description">
        </div>
        <div class="form-group">
          <button class="btn btn-large btn-primary btn-block">Submit!</button>
        </div>
      </form>
    </div>
</div>
